<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="4">Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <%# <td><%= image_tag post.file_gabriel.variant(resize: "100x100", colorspace: "gray") </td>%>
        <td><%= post.file_gabriel %></td>
        <td><%= link_to "Verlo solo a el", rails_blob_path(post.file_gabriel, disposition: 'preview') %></td>
        <td><%= link_to "Guardalo en tu vida", rails_blob_path(post.file_gabriel, disposition: 'attachment') %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
